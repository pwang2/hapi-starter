{
  "name": "hapi-starter",
  "version": "1.0.0",
  "main": "server.packed.js",
  "license": "MIT",
  "scripts": {
    "dev": "npm run clean && run-p dev:*",
    "build": "run-s clean build:*",
    "start": "npm run build && run-p start:*",
    "compose": "npm run build && docker-compose up --build",
    "-------": "#---------------------------------------------------------------#",
    "dev:hapi": "nodemon --inspect server.js",
    "dev:webpack": "run-s wait-port wds",
    "dev:open": "run-s wait-view wds:open",
    "start:hapi": "NODE_ENV=production node server.packed.js",
    "start:static": "run-s wait-port hs:open",
    "build:hapi": "NODE_ENV=production webpack --config webpack.server.config.js",
    "build:static": "NODE_ENV=production webpack --hide-modules",
    "wait-port": "wait-on tcp:${PORT:-3000}",
    "wait-view": "wait-on static/",
    "wds": "NODE_ENV=development webpack-dev-server",
    "wds:open": "opn http://localhost:8888/",
    "hs:open": "hs -d false -p 8888 -P http://localhost:${PORT:-3000} -o",
    "clean": "rimraf static",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": ["eslint --fix", "git add"],
    "*.{json,css,md}": ["prettier --write", "git add"]
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-prettystream": "^0.1.3",
    "crumb": "^7.0.0",
    "glue": "^5.0.0",
    "h2o2": "^8.0.1",
    "handlebars": "^4.0.11",
    "handlebars-helpers": "^0.10.0",
    "hapi": "^17.3.1",
    "oppsy": "^2.0.0",
    "vision": "^5.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.44",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-stage-2": "^7.0.0-beta.44",
    "@babel/register": "^7.0.0-beta.44",
    "@babel/runtime": "^7.0.0-beta.44",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.0.0-beta.2",
    "codemirror": "^5.36.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-vue": "^4.4.0",
    "file-loader": "^1.1.11",
    "glob": "^7.1.2",
    "html-webpack-harddisk-plugin": "^0.2.0",
    "html-webpack-plugin": "3.0.7",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.0.4",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "opn-cli": "^3.1.0",
    "prettier": "^1.12.0",
    "rimraf": "^2.6.2",
    "url-loader": "^1.0.1",
    "vue": "^2.5.16",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16",
    "wait-on": "^2.1.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "browserslist": ["> 1%", "last 2 versions"]
}
